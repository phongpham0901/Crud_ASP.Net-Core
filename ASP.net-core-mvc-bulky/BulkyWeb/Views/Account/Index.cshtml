@model List<Account>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Account List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Account" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Create New Account
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Account Email
            </th>
            <th>
                Account Password
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Email</td>
                <td>@obj.Password</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Account" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Account" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
